<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body>
        <div class="wrapper">
            <header>
                <%- include('../partials/header'); %>
            </header>
            <div class="content">
                <%- include('../partials/left_aside'); %>
                <main>
                    <div class="row">
                        <h2 class="large">Popular</h2>
                        <% popular.forEach(element => { %>
                            <div class="card">
                                <div class="card-img" style="background-image: url('../users/<%= element.sellerId%>/product<%= element.productId%>/result/<%=element.resultPath%>');"><a href="/product/<%= element.productId %>"></a></div>
                                <div class="card-body">
                                    <p class="title"><%= element.title %></p>
                                    <p class="price"><%= element.price %>$</p>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    <div class="row">
                        <h2 class="large">Newest</h2>
                        <% newest.forEach(element => { %>
                            <div class="card">
                                <div class="card-img" style="background-image: url('../users/<%= element.sellerId%>/product<%= element.id%>/result/<%=element.resultPath%>');"><a href="/product/<%= element.id %>"></a></div>
                                <div class="card-body">
                                    <p class="title"><%= element.title %></p>
                                    <p class="price"><%= element.price %>$</p>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </main>
            </div>
            <% if (!user) { %>
                <%- include('../partials/auth.ejs'); %>
            <% } %>
            
            <footer>
                <%- include('../partials/footer'); %>
            </footer>
        </div>
    </body>
</html>