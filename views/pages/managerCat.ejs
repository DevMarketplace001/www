<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body>
        <div class="wrapper">
            <header>
                <%- include('../partials/header'); %>
            </header>
            <div class="content">
                <%- include('../partials/left_aside'); %>
                <main>
                    <div class="manCat">
                        <div class="add_form">
                            <h2 class="middle">Form add category </h2>
                            <form id="category">
                                <input type="text" placeholder="Write category" required name="title" class="smallest">
                                <button class="middle">Add new category</button>
                                <p class="callback middle">&#8205;</p>
                            </form>
                        </div>
                        <ul class="delete_forms">
                            <h2 class="middle">Categories List</h2>
                            <% categories.forEach(element => { %>
                                <li><form class="delete_form delete_cat">
                                    <label for="" class="smallest"><%= element.title %></label>
                                    <input type="text" name="title" value="<%= element.id %>" readonly>
                                    <button><img src="../imgs/delete.png" alt=""></button>
                                </form></li>
                            <% }) %>
                            <li></li>
                        </ul>
                    </div>
                    
                </main>
            </div>
            <% if (!user) { %>
                <%- include('../partials/auth.ejs'); %>
            <% } %>
            
            <footer>
                <%- include('../partials/footer'); %>
            </footer>
        </div>
    </body>
</html>